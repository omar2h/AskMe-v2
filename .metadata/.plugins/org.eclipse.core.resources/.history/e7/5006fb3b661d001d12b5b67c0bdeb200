#ifndef DBMANAGER_H_
#define DBMANAGER_H_
#include <iostream>
#include <vector>

class UsersDb;
class User;

class DBmanager {
	UsersDb* usersdb;

	void read_file_lines(std::string path, std::vector<std::string> &lines);
